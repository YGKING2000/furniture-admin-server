<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.furniture.admin.server.content.dao.persist.mapper.ArticleMapper">
    <select id="getStandardById" resultMap="StandardResultMap">
        SELECT id, author_id, author_name, category_id, title, brief, tags, ip, sort, cover_url, up_count, 
               down_count, click_count, comment_count, check_state, check_remarks, display_state
        FROM content_article
        WHERE id = #{id}
    </select>

    <resultMap id="StandardResultMap" type="com.example.furniture.admin.server.content.pojo.vo.ArticleStandardVO">
        <id column="id" property="id"/>
        <result column="author_id" property="authorId"/>
        <result column="author_name" property="authorName"/>
        <result column="category_id" property="categoryId"/>
        <result column="title" property="title"/>
        <result column="brief" property="brief"/>
        <result column="tags" property="tags"/>
        <result column="ip" property="ip"/>
        <result column="sort" property="sort"/>
        <result column="cover_url" property="coverUrl"/>
        <result column="up_count" property="upCount"/>
        <result column="down_count" property="downCount"/>
        <result column="click_count" property="clickCount"/>
        <result column="comment_count" property="commentCount"/>
        <result column="check_state" property="checkState"/>
        <result column="check_remarks" property="checkRemarks"/>
        <result column="display_state" property="displayState"/>
    </resultMap>
</mapper>
